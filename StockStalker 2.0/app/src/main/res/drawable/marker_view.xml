    <item
        android:gravity="bottom"
        android:top="20dp"
        android:right="32dp"
        android:left="32dp">
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">
                <size
                    android:width="24dp"
                    android:height="24dp"/>
                <solid
                    android:color="#666"/>
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="8dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size
                android:width="24dp"
                android:height="24dp"/>
            <gradient
                android:startColor="#333"
                android:centerColor="#333"
                android:endColor="#666"
                android:angle="270"/>
            <corners
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>
        </shape>
    </item>
</layer-list>