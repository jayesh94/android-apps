<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorControlHighlight">@color/gray14</item>
        <item name="colorPrimaryDark">@color/green3</item>
<!--     setting this colorPrimaryDark successfully changes the status bar color but with a shadow on top of it  -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="AppBarLayoutStyle" parent="BaseAppBarLayoutStyle">
        <item name="liftOnScroll">false</item>
    </style>

</resources>