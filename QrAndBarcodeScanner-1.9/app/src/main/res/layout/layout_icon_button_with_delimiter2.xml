<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin_small"
    android:elevation="@dimen/default_margin"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/toolbar_background_color"
    app:cardCornerRadius="@dimen/default_margin_medium2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/default_margin_medium2"
        android:textAlignment="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/layout_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_circle"
                android:padding="@dimen/icon_button_icon_padding">

                <ImageView
                    android:layout_width="@dimen/icon_button_icon_size"
                    android:layout_height="@dimen/icon_button_icon_size"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/transparent"
                    tools:src="@drawable/ic_copy" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/layout_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_circle_shadow"
                android:padding="@dimen/icon_button_icon_padding">

                <ImageView
                    android:layout_width="@dimen/icon_button_icon_size"
                    android:layout_height="@dimen/icon_button_icon_size"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/transparent"
                    tools:src="@drawable/ic_copy" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_circle_shadow"
                android:padding="@dimen/icon_button_icon_padding">

                <ImageView
                    android:id="@+id/image_view_schema"
                    android:layout_width="@dimen/icon_button_icon_size"
                    android:layout_height="@dimen/icon_button_icon_size"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/white"
                    tools:src="@drawable/ic_copy" />
            </FrameLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/text_view"
            style="@style/DefaultTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_medium2"
            android:textColor="@color/color_icon_button_icon_and_text"
            tools:text="Copy" />
    </LinearLayout>
</androidx.cardview.widget.CardView>